    "keywords"         : ["nfse", "php", "netforce"],
    "license"          : "MIT",
    "authors"          : [
        {
            "name" : "Bruno Gonçalves",
            "email": "bugotech@gmail.com"
        }
    ],

    "require"          : {
        "nesbot/carbon"          : "1.*",
        "illuminate/filesystem"  : "5.2.*",
        "phpnfe/tools"           : "2.0.*",
        "dompdf/dompdf"          : "0.6.*",
        "besimple/soap-client"   : "0.2.*@dev"
    },

    "require-dev": {
        "symfony/console": "~3.2"
    },

    "autoload"         : {
        "psr-4": {
            "PhpNFe\\NFSe\\": "src/"
        }
    },

    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },

    "minimum-stability": "dev",
    "prefer-stable"    : true
}
